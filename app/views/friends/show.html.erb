

<div class="jumbotron" >
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
 
  <hr class="my-4">
  <p><strong>Email:</strong> <%= @friend.email %></p> 
  <p><strong>Phone:</strong> <%= @friend.phone %></p>
  <p><strong>Twitter:</strong> <%= @friend.twitter %></p>

<div>
  <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path,class:"btn btn-secondary" %>
<br><br>
  <%= button_to "Destroy this friend", @friend, method: :delete ,class:"btn btn-secondary"%>
</div>
</div>