<% if user_signed_in? %>

<div id="friends">
  <table class="table table-striped table-sm table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
  <% if friend.user == current_user %>
    <tr>
      <th scope="row"></th>
      <td><%= link_to friend.first_name + ' ' + friend.last_name , friend %></td>
      <td>@<%= friend.email %></td>
      <td>@<%= friend.phone %></td>
      <td>@<%= friend.twitter %></td>
      <td><%= button_to "Destroy", friend, method: :delete ,class:"btn btn-outline-danger btn-sm"%></td>
    </tr>
    <% end %>
  <% end %>
    </tbody>  
  </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
<h1>hello World!</h1>
<p>we here in the world</p>
<% end %>